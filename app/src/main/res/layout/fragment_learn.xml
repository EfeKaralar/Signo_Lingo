<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LearnFragment">

    <ImageButton
        android:id="@+id/btnCourse1"
        android:src="@drawable/alphabet_96"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/purple_200"
        android:backgroundTintMode="src_in"
        android:text="0%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="25%" />

    <ImageButton
        android:id="@+id/btnCourse2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:src="@drawable/gesture_96"
        android:text="0%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="75%" />

    <ImageButton
        android:id="@+id/btnCourse3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:src="@drawable/gesture_grey_96"
        android:text="0%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="75%" />

    <ImageButton
        android:id="@+id/btnCourse4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/button_rounded"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:src="@drawable/alphabet_grey_96"
        android:text="0%"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        tools:text="75%" />

    <TextView
        android:id="@+id/tvCourse1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="0dp"
        android:text="Alphabet 1"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCourse2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="0dp"
        android:text="Basics 1"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCourse3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="0dp"
        android:text="Basics 2"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvCourse4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="0dp"
        android:text="Basics 4"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="73dp"
        android:text="More courses will be added soon!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

</RelativeLayout>